@using Microsoft.AspNet.Identity
@using EgyptMenu.Views.Shared.Resources
<link href="~/Content/new-style.css" rel="stylesheet" />
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
    }
    if (User.IsInRole("Admin"))
    {
        <a data-scroll href="@Url.Action("Dashboard","Admin")" class="btn" style="border:1px solid #ffa822; margin-top:-20px; background-color:none; color:white;">
            @Resource.Dashboard
        </a>
        <a class="btn" style=" background-color:#ffa822; margin-top:-20px; color:white; " href="@Url.Action("Index","Home" ,new { lang=Resource.lang})">@Resource.language</a>
    }
    else
    {
        <a data-scroll href="@Url.Action("Dashboard","Owner")" class="btn" style="margin-top: -20px; border: 1px solid #ffa822; background-color: none; color: white;">
            @Resource.Dashboard
        </a>
        <a class="btn" style=" background-color:#ffa822; color:white; margin-top:-20px;" href="@Url.Action("Index","Home" ,new { lang=Resource.lang})">@Resource.language</a>
    }



