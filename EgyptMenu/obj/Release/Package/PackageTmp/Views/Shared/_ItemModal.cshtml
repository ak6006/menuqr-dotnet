@model EgyptMenu.Models.item
@{
Layout = null;
}

<div class="modal-content">
    <div class="modal-header">
        <h5 id="modalTitle" class="modal-title" id="modal-title-new-item">@Model.name</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
        </button>
    </div>
    <div class="modal-body p-0">
        <div class="card bg-secondary shadow border-0">
            <div class="card-body px-lg-5 py-lg-5">
                <div class="row">
                    <div class="col-sm col-md col-lg col-lg text-center">
                        <img id="modalImg" src="~/Content/images/@Model.image" width="295px" height="200px">
                    </div>
                    <div class="col-sm col-md col-lg col-lg">
                        <input id="modalID" type="hidden"></input>
                        <span id="modalPrice" class="new-price">@Model.price</span>
                        <p id="modalDescription">@Model.description</p>
                        <div id="variants-area">
                            <label class="form-control-label">Select your options</label>
                            <div id="variants-area-inside">
                            </div>
                        </div>



                        <div id="exrtas-area">
                            <br />
                            <label class="form-control-label" for="quantity">Extras</label>
                            <div id="exrtas-area-inside">
                                @foreach (var item in Model.extras)
                                {
                                <label class="custom-control-label" for="7">
                                    @item.name &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;+@item.price $
                                </label>
                                }

                            </div>
                        </div>



                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

